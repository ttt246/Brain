<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="SettingEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">@dimen/width_stroke_thin</item>
        <item name="android:disabledAlpha">0.1</item>
    </style>


    <style name="ChatControlCircleButtonStyle">
        <item name="android:layout_width">@dimen/size_circle_button_chat_control</item>
        <item name="android:layout_height">@dimen/size_circle_button_chat_control</item>
        <item name="android:background">@drawable/bg_circle_button_chat_control</item>
        <item name="android:padding">@dimen/padding_circle_button_chat_control</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/width_divider</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="ThinHorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/width_divider_thin</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="ChatCommonEditText">
        <item name="android:minHeight">@dimen/height_edittext_normal</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_small</item>
        <item name="android:paddingVertical">@dimen/spacing_micro</item>
        <item name="android:paddingHorizontal">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/bg_edittext_radius_small</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textColorHint">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ChatWidgetCommonButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button_normal</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>
</resources>